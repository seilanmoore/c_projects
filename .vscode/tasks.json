{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "My Task",
            "command": "/usr/bin/gcc",
            "args": [
                "-g", // Include debugging information
                "-O0", // Disable optimizations
                //"-Wall", // Enable all warning messages
                //"-Werror", // Treat warnings as errors
                //"-Wextra", // Enable extra warning messages
                "${file}", // The file to compile
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}", // The output file
                "-L",
                "${workspaceFolder}/printf_project/printf_lib",
                "-l",
                "ftprintf",
                "-L",
                "${workspaceFolder}/libft/",
                "-l",
                "ft"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}